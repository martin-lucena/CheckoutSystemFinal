@model IEnumerable<CheckoutSystem.Models.Film>

@{
    ViewData["Title"] = "Index";
}

<h1>Films</h1>

<p>
    <a asp-action="Create">Add New Film</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSort"]">
                     Title
              </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TypeSort"]">
                    Type
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Customer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmMediaType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Id) 
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
